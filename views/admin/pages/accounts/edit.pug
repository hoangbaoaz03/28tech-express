extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes("products-category_edit"))
        h1(class="mb-4") Them moi tai khoan

        +alert-success(5000)
        +alert-error(5000)

        if(roles)
            form(
                action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
                method="POST"
                enctype="mutipart/form-data"
            )
                div(class="form-group")
                    label(for="fullName") Ho ten *
                    input(
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        required 
                        value = data.fullName
                    )
                div(class="form-group")
                    label(for="email") Email *
                    input(
                        type="text"
                        class="form-control"
                        id="email"
                        name="email"
                        required
                        value = data.email
                    ) 
                div(class="form-group")
                    label(for="password") Password *
                    input(
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                    ) 
                div(class="form-group")
                    label(for="phone") So dien thoai
                    input(
                        type="text"
                        class="form-control"
                        id="phone"
                        name="phone"
                        value = data.phone
                    ) 
                div(
                    class="form-group"
                    upload-image
                )
                    label(for="avatar") Avatar
                    input(
                        type="file"
                        class="form-control-file"
                        id="avatar"
                        name="avatar"
                        accept="image/*"
                        upload-image-input
                    )  
                    img(
                        src=data.avatar
                        class="image-preview"
                        upload-image-preview
                    )
                div(class="form-group")
                    label(for="role_id") Phan quyen 
                    select(name="role_id" id="role_id" class="form-control")
                        option(disabled) -- Chon --
                        each item in roles 
                            option(
                                value=item.id
                                selected=(item.id == data.role_id? true : false)
                            ) #{item.title} 
                div(class="form-group form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusActive"
                        name="status"
                        value="active"
                        checked=(data.status === "active" ? true : false)
                    )
                    label(for="statusActive" class="form-check-label") Hoat dong
                div(class="form-group form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusInActive"
                        name="status"
                        value="inactive"
                        checked=(data.status === "inactive" ? true : false)
                    )
                    label(for="statusInActive" class="form-check-label") Dung hoat dong
                div(class="form-group")
                    button(
                        type="submit"
                        class="btn btn-primary"
                    ) Chinh sua
        else 
            p Vui long tao nhom quyen truoc khi cap nhat tai khoan 
            p 
                a(href=`${prefixAdmin}/roles/create` class = "btn btn-secondary") Tao nhom quyen 
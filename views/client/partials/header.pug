include ../mixins/sub-menu.pug

header.header
    .container 
        .row.align-items-center 
            .col-3 
                .inner-logo 
                    a(href="/")
                        img(src="/images/logo.svg" alt="Logo")

            .col-5 
                form(
                    action="/search"
                    method="GET"
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhap tu khoa"
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tim


            .col-4
                .inner-menu 
                    ul 
                        li 
                            a(href="/") Trang chu 
                        li(class="sub-menu")
                            -const pathProduct = "/products"
                            a(href=pathProduct) San pham
                            +sub-menu(layoutProductCategory, pathProduct)
                        li 
                            a(href="/cart") Gio hang(#{miniCart ? miniCart.totalQuantity : 0})

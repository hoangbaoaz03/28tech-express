extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Nhap ma OTP
                form(
                    action="/user/password/otp"
                    method="post"
                )
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="text"
                            name="email"
                            id="email"
                            class="form-control"
                            required
                            value=email
                            readonly
                        )
                    div(class="form-group")
                        label(for="otp") OTP
                        input(
                            type="text"
                            name="otp"
                            id="otp"
                            class="form-control mb-3"
                            required 
                        )
                    div(class="form-group text-end")
                        button(
                            type="submit"
                            class= "btn btn-primary btn-block"
                        ) Xac nhan

